<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.veraj.calculator.MainActivity">

    <TextView
        android:id="@+id/screen"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text=""
        android:textSize="40sp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignRight="@id/button_layout4"
        android:layout_below="@+id/screen"
        android:gravity="center"
        android:text="Clear"
        android:onClick="clearClick"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/button_layout1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/reset"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/b00"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="âˆš"
            android:textSize="25sp" />

        <Button
            android:id="@+id/b10"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b20"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b30"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b40"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="."
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/reset"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/button_layout1">

        <Button
            android:id="@+id/b01"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="+/-"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b11"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b21"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b31"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b41"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="0"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/reset"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/button_layout2">

        <Button
            android:id="@+id/b02"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="del"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b12"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b22"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b32"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b42"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:text="%"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout4"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/reset"
        android:layout_toRightOf="@+id/button_layout3"
        android:orientation="vertical">

        <Button
            android:id="@+id/b03"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="/"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b13"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="*"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b23"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:text="-"
            android:textSize="35sp" />

        <Button
            android:id="@+id/b33"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="20sp" />

        <Button
            android:id="@+id/b43"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="22"
            android:backgroundTint="#FF80CBC4"
            android:text="="
            android:textSize="20sp" />


    </LinearLayout>


</RelativeLayout>
